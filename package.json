{
  "name": "slackbot-starter",
  "version": "0.1.0",
  "description": "A starter for a Slackbot built in TypeScript and node",
  "main": "index.ts",
  "author": "charlesdobson <charlesdobson92@gmail.com>",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlesdobson/slackbot-starter.git"
  },
  "scripts": {
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --fix",
    "serve": "NODE_ENV=development nodemon --exec 'ts-node' src/index.ts",
    "start": "NODE_ENV=production ts-node src/index.ts"
  },
  "devDependencies": {
    "@types/node": "15.3.1",
    "@typescript-eslint/eslint-plugin": "4.26.1",
    "@typescript-eslint/parser": "4.26.1",
    "dotenv": "10.0.0",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "nodemon": "2.0.7",
    "prettier": "2.3.1",
    "ts-node": "10.0.0",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "@slack/web-api": "^6.1.0",
    "axios": "^0.21.1",
    "tslog": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/*.{js,ts}": [
      "npx prettier --write",
      "yarn run lint"
    ]
  }
}
